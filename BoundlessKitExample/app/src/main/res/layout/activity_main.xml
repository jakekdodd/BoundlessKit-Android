<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/MyYellow"
    tools:context="boundless.boundlesskitexample.MainActivity">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">
        <ImageView
            android:id="@+id/header_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/boundlessmind_logo"
            android:src="@mipmap/brain"
            />

        <boundless.kit.rewards.animation.attention.CustomSheenView
            android:id="@+id/sheen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_alignTop="@id/header_icon"
            android:layout_alignRight="@id/header_icon"
            android:layout_alignLeft="@id/header_icon"
            android:layout_alignBottom="@id/header_icon"
            android:scaleType="centerCrop"
            android:visibility="gone"
            />

    </RelativeLayout>
        <TextView
            android:id="@+id/list_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textAlignment="center"
            android:text="@string/listTitle"
            android:textSize="50sp"
            android:textStyle="italic|bold"
            android:layout_below="@id/header"/>
    <ListView
        android:id="@+id/list_todo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/list_title"/>
</RelativeLayout>
